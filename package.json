{
    "name": "node-starter-ts",
    "version": "1.0.0",
    "description": "Node.js starter package written in Typescript.",
    "main": "index.js",
    "scripts": {
        "start": "ts-node src/app.ts",
        "test": "jest",
        "format": "prettier --config .prettierrc.json --write {./{src,test}/{**,}/**.ts,./*.{json,js}}",
        "lint": "eslint . --ext .ts",
        "build": "tsc -p ./tsconfig.json",
        "prepare": "husky install"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/express": "4.17.13",
        "dotenv": "10.0.0",
        "express": "4.17.1",
        "mongoose": "6.0.7",
        "ts-node": "10.2.1",
        "typescript": "4.4.3"
    },
    "devDependencies": {
        "@types/jest": "27.0.2",
        "@types/supertest": "2.0.11",
        "@typescript-eslint/eslint-plugin": "4.31.2",
        "@typescript-eslint/parser": "4.31.2",
        "eslint": "7.32.0",
        "husky": "7.0.2",
        "jest": "27.2.1",
        "lint-staged": "11.1.2",
        "prettier": "^2.4.1",
        "supertest": "6.1.6",
        "ts-jest": "27.0.5"
    },
    "lint-staged": {
        "*.{js,json,ts}": [
            "eslint . --ext .ts",
            "npm run format"
        ]
    }
}
